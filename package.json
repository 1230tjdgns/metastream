{
  "name": "tv",
  "productName": "TV",
  "private": true,
  "version": "0.11.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build-dll": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.dev.dll.js --progress --profile --colors",
    "build-main": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js --progress --profile --colors",
    "build-preload": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.preload.dev.js",
    "build-renderer": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.prod.js --progress --profile --colors",
    "build": "concurrently \"npm run build-main\" \"npm run build-renderer\" \"npm run build-preload\"",
    "dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "greenworks:rebuild": "HOME=~/.electron-gyp node-gyp rebuild --target=1.6.11 --arch=x64 --dist-url=https://atom.io/download/electron",
    "lint-fix": "npm run lint -- --fix",
    "lint-styles-fix": "stylefmt -r app/*.css app/components/*.css",
    "lint-styles": "stylelint app/*.css app/components/*.css --syntax scss",
    "lint": "echo \"todo\"",
    "package-all": "npm run build && build -mwl",
    "package-linux": "npm run build && build --linux",
    "package-win": "npm run build && build --win --x64",
    "package": "npm run build && build --publish never",
    "postinstall": "concurrently \"npm run build-dll\" \"install-app-deps\" \"node node_modules/fbjs-scripts/node/check-dev-engines.js package.json\"",
    "prestart": "npm run build",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron -r babel-register ./app/main.dev",
    "start-renderer-dev": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.config.renderer.dev.js",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "steam:appid": "echo 480 > app/steam_appid.txt",
    "test-all": "npm run lint && npm run test && npm run build && npm run test-e2e",
    "test-e2e": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 node --trace-warnings ./test/runTests.js e2e",
    "test-watch": "npm test -- --watch",
    "test": "cross-env NODE_ENV=test BABEL_DISABLE_CACHE=1 node --trace-warnings ./test/runTests.js"
  },
  "browserslist": "electron 1.4",
  "build": {
    "productName": "MediaPlayer",
    "appId": "mediaplayer",
    "files": [
      "assets/",
      "dist/",
      "node_modules/",
      "app.html",
      "idlescreen.html",
      "main.prod.js",
      "main.prod.js.map",
      "preload.js",
      "preload.js.map",
      "package.json",
      "steamworks.js"
    ],
    "extraFiles": [
      {
        "from": "app/lib/",
        "to": "lib/"
      },
      "steam_appid.txt"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samuelmaddock/tv.git"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.2",
    "@types/classnames": "^2.2.3",
    "@types/deep-diff": "^0.0.30",
    "@types/electron": "^1.4.37",
    "@types/history": "^4.5.0",
    "@types/node": "^7.0.14",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-redux": "^5.0.8",
    "@types/react-router-dom": "^4.0.4",
    "@types/react-router-redux": "^5.0.8",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.0",
    "@types/request": "^2.0.3",
    "@types/simple-peer": "^6.1.2",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.24.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-dynamic-import-webpack": "^1.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "chalk": "^1.1.3",
    "concurrently": "^3.4.0",
    "cross-env": "^4.0.0",
    "cross-spawn": "^5.1.0",
    "css-loader": "^0.28.0",
    "devtron": "^1.4.0",
    "electron": "1.6.11",
    "electron-builder": "^17.0.1",
    "electron-devtools-installer": "^2.2.0",
    "electron-rebuild": "^1.5.7",
    "enzyme": "^2.8.2",
    "express": "^4.15.2",
    "fbjs-scripts": "^0.7.1",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "jsdom": "^9.12.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.2",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "redux-logger": "^3.0.1",
    "sass-loader": "^6.0.3",
    "sinon": "^2.1.0",
    "spectron": "^3.6.2",
    "style-loader": "^0.18.2",
    "stylefmt": "^5.3.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "typescript": "^2.4.1",
    "url-loader": "^0.5.8",
    "webpack": "^3.5.6",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.8.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "classnames": "^2.2.5",
    "deep-diff": "^0.3.8",
    "electron-debug": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "font-awesome": "^4.7.0",
    "history": "^4.7.2",
    "lodash": "^4.17.4",
    "react": "15.6.1",
    "react-dom": "^15.5.4",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "request": "^2.81.0",
    "simple-peer": "^8.1.1",
    "source-map-support": "^0.4.14"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "jsonEnable": false
  }
}
